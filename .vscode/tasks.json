{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/src/BonusSystem.Api/BonusSystem.Api.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/src/BonusSystem.Api/BonusSystem.Api.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/src/BonusSystem.Api/BonusSystem.Api.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "docker-compose-up",
            "command": "docker-compose",
            "type": "process",
            "args": ["up", "-d"],
            "problemMatcher": []
        },
        {
            "label": "docker-compose-down",
            "command": "docker-compose",
            "type": "process",
            "args": ["down"],
            "problemMatcher": []
        }
    ]
}